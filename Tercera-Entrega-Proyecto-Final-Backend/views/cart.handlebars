<nav class="flex justify-between items-center text-center font-bold w-full border-b-4 border-indigo-800">
    <div class="flex items-center font-bold w-[95%] mx-auto p-5">
        <div>
            <a href="/">
                <h2 class="font-extrabold text-indigo-800 text-4xl">CODERHOUSE</h2>
            </a>
        </div>
</nav>


<div class="w-1/2 mx-auto p-4 flex flex-col space-y-5 text-center mt-10">
    {{#if products}}
        {{#each products}}
            <div class="p-10 bg-indigo-500 w-full flex justify-between items-center text-center font-bold text-xl uppercase">
                <img class="w-1/6" src={{image}} alt="">
                <span>{{title}}</span>
                <span>${{price}}</span>
                <span>Cantidad: {{quantity}}</span>
            </div>
        {{/each}}
        <button id="makeOrder" class="p-4 w-1/4 mx-auto font-bold text-lg bg-indigo-800 rounded-full uppercase text-white">Realizar Pedido</button>
    {{else}}
        <h1 class="font-bold text-3xl text-indigo-800 uppercase">No hay productos en el carrito...</h1>
        <a href="/home" class="p-4 w-1/4 mx-auto font-bold text-lg bg-indigo-800 rounded-full uppercase text-white">Regresar</a>
    {{/if}}
</div>

<script src="//cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/alertify.min.js"></script>
<script src="js/cart.js"></script>