<div class="p-10 w-1/2 mx-auto text-center space-y-10">
    <h1 class="text-4xl font-bold text-indigo-800 uppercase">Añade un producto aqui!</h1>
    <form class="flex flex-col w-1/2 mx-auto space-y-4" id="formProducts">

        <div class="flex flex-col items-center text-center space-y-5 w-full">
            <label class="font-bold text-lg uppercase" for="title">Titulo</label>
            <input class="p-2 rounded-full border-2 border-indigo-800 pl-5 w-full" placeholder="Titulo del producto" type="text" name="title">
        </div>

        <div class="flex flex-col items-center text-center space-y-3 w-full">
            <label class="font-bold text-lg uppercase" for="description">Descripcion</label>
            <input class="p-2 rounded-full border-2 border-indigo-800 pl-5 w-full" placeholder="Descripcion del producto" type="text" name="description">
        </div>

        <div class="flex flex-col items-center text-center space-y-3 w-full">
            <label class="font-bold text-lg uppercase" for="price">Precio</label>
            <input class="p-2 rounded-full border-2 border-indigo-800 pl-5 w-full" placeholder="Precio del producto" type="number" name="price">
        </div>

        <div class="flex flex-col items-center text-center space-y-3 w-full">
            <label class="font-bold text-lg uppercase" for="stock">Stock</label>
            <input class="p-2 rounded-full border-2 border-indigo-800 pl-5 w-full" placeholder="Stock del producto" type="number" name="stock">
        </div>

        <div class="flex flex-col items-center text-center space-y-3 w-full">
            <label class="font-bold text-lg uppercase" for="image">Imagen</label>
            <input class="p-2 rounded-full border-2 border-indigo-800 pl-5 w-full" placeholder="Imagen del producto" type="text" name="image">
        </div>
        <div id="alert"></div>
        <input class="p-4 rounded-full bg-indigo-800 text-white cursor-pointer font-bold uppercase" value="Añadir producto" type="submit" >
    </form>
</div>

<script src="https://unpkg.com/validator@latest/validator.min.js"></script>
<script src="//cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/alertify.min.js"></script>
<script src="../js/products.js"></script>